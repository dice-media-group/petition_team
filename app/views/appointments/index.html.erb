


<div class="row">
  <div class="col-sm-6">
    <h1>Appointments for <%= @parent.name %> </h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_patient_appointment_path(1), class: 'btn btn-primary' do %>
    Add New Appointment
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Appointment datetime</th>
            <th>Doctor</th>
            <th>Patient</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @appointments.each do |appointment| %>
        <%= content_tag :tr, id: dom_id(appointment), class: dom_class(appointment) do %>
          

                      <td><%= appointment.appointment_datetime %></td>
                      <td><%= appointment.doctor %></td>
                      <td><%= appointment.patient %></td>
          
          
            <td><%= link_to 'Show', appointment %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
