<div class="page-header">
  <%= link_to teams_path, class: 'btn btn-default' do %>
    All Teams
  <% end %>
  <%= link_to edit_team_path(@team), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1><%= @team.name %></h1>
</div>
<%#= link_to 'Invite', new_user_invitation_path(team_id: @team.id) %>
<h4>Invite someone</h4>
<%= form_for [@team, TeamUser.new]  do |form| %>
  <div class="field">
    <%= form.text_field :email, required: true %>

  </div>
  <%= form.submit "Invite" %>
<% end %>

<dl class="dl-horizontal">

  <dt>Team Members</dt>
  <dd>
    <ul>
      <% @team.users.each do |user| %>

        <div class="user_email"><%= user.email %> </div>
      <% end %>
    </ul>
  </dd>
  <dt>Description:</dt>
  <dd><%= @team.description %></dd>

</dl>
