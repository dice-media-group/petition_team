      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <h4>Ballot Inititives</h4>

  <div class="nested-form" data-controller="nested-form">
    <template data-target="nested-form.template">
    <%= form.fields_for :ballot_inititives, BallotInititive.new, child_index: 'NEW_RECORD' do |ballot_inititive| %>
        <%= render 'ballot_inititive_fields', form: ballot_inititive %>
    <% end %>
        
    </template>
  
    <%= form.fields_for :ballot_inititives do |ballot_inititive| %>
        <%= render 'ballot_inititive_fields', form: ballot_inititive %>
    
    <% end %>

    <div class="mb-3" data-target="nested-form.links">
      <%= link_to 'Add Ballot Inititive', "#", class: "btn btn-outline-primary", data: { action: "click->nested-form#add_association" } %>
    </div>
  </div>

<hr />

  <div class="form-group">
    <% if team.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy Team', team, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if team.persisted? %>
      <%= link_to "Cancel", team, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", teams_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
