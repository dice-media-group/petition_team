<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if patient.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', patient, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if patient.persisted? %>
      <%= link_to "Cancel", patient, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", patients_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
