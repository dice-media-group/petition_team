


<div class="row">
  <div class="col-sm-6">
    <h1>Doctors</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_doctor_path, class: 'btn btn-primary' do %>
    Add New Doctor
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            
      </tr>
    </thead>

    <tbody>
      <% @doctors.each do |doctor| %>
        <%= content_tag :tr, id: dom_id(doctor), class: dom_class(doctor) do %>
          
            <td><%= link_to doctor.name, doctor %></td>
          

          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
